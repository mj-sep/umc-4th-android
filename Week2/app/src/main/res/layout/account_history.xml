<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".AccountHistory"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:background="#93b85b"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="80sp"
            android:layout_marginBottom="20sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginRight="20sp"
                android:layout_weight="1"
                android:src="@drawable/ic_back" />

            <TextView
                android:id="@+id/account_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/applesdgothicneo_r"
                android:text="예비계좌"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/ic_setting"
                android:layout_width="match_parent"
                android:layout_height="24sp"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"

                android:src="@drawable/ic_setting" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/applesdgothicneo_r"
            android:gravity="center"
            android:text="3333-00-0000000"
            android:textColor="#c5dfa2"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/applesdgothicneo_b"
            android:gravity="center"
            android:text="0원"
            android:textColor="#FFFFFF"
            android:textSize="32sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20sp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/radius_account"
                android:fontFamily="@font/applesdgothicneo_m"
                android:text="이체하기"
                android:textSize="14sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/radius_account"
                android:fontFamily="@font/applesdgothicneo_m"
                android:text="가져오기"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="20sp"
                android:src="@drawable/ic_loupe" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.5"
                android:fontFamily="@font/applesdgothicneo_r"
                android:text="1개월 · 전체 · 최신순"
                android:textAlignment="textEnd"
                android:textColor="#666666"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:background="#2A666666"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/applesdgothicneo_r"
                    android:text="03.25"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/applesdgothicneo_m"
                    android:text="입출금통장 이자"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:layout_weight="0.3"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/applesdgothicneo_b"
                    android:text="0원"
                    android:textColor="#3b81c9"
                    android:textSize="16sp"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/applesdgothicneo_r"
                    android:text="03.25"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/applesdgothicneo_r"
                    android:text="#예금이자"
                    android:textColor="#3b81c9"
                    android:textSize="14sp"
                    android:layout_weight="0.3"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/applesdgothicneo_r"
                    android:text="0원"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:textAlignment="textEnd"
                    android:layout_weight="1"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:background="#2A666666"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>

    </LinearLayout>

</LinearLayout>