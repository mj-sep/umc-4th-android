<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80sp"
            android:layout_marginBottom="10sp"
            android:columnCount="4"
            android:rowCount="1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="민주"
                android:textColor="#000000"
                android:textSize="24sp"
                android:fontFamily="@font/applesdgothicneo_b"
                android:gravity="center"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=">"
                android:textColor="#666666"
                android:textSize="20sp"
                android:fontFamily="@font/applesdgothicneo_r"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                />

            <Button
                android:id="@+id/myaccount_ic"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/radius_transp"
                android:fontFamily="@font/applesdgothicneo_b"
                android:layout_gravity="right"
                android:text="앱설정"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_columnSpan="2"/>


        </GridLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.2" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cardCornerRadius="15sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    app:cardBackgroundColor="#13438f">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_adv2" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    >

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_cs" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_lock" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_notice" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#FFFFFF"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_event" />
                </LinearLayout>

                <View
                    android:background="#1A666666"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:columnCount="4"
                    android:rowCount="1"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="카드 청구금액 알림"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/applesdgothicneo_b"
                        android:layout_gravity="center"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_new"
                        android:layout_gravity="center"
                        android:scaleType="fitStart"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/applesdgothicneo_r"
                        android:scaleType="fitEnd"
                        android:text=">"
                        android:textColor="#666666"
                        android:textSize="20sp"
                        android:layout_columnSpan="2" />


                </GridLayout>
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="10sp"
                    android:columnCount="4"
                    android:rowCount="1"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="돈이 되는 이야기"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/applesdgothicneo_b"
                        android:layout_gravity="center"
                        />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_up"
                        android:layout_gravity="center"
                        android:scaleType="fitStart"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/applesdgothicneo_r"
                        android:scaleType="fitEnd"
                        android:text=">"
                        android:textColor="#666666"
                        android:textSize="20sp"
                        android:layout_columnSpan="2" />


                </GridLayout>

                <View
                    android:background="#1A666666"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="내 계좌"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/applesdgothicneo_b"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/applesdgothicneo_r"
                        android:scaleType="fitEnd"
                        android:text=">"
                        android:textColor="#666666"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="내 혜택"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/applesdgothicneo_b"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/applesdgothicneo_r"
                        android:scaleType="fitEnd"
                        android:text=">"
                        android:textColor="#666666"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="내 신용정보"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/applesdgothicneo_b"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/applesdgothicneo_r"
                        android:scaleType="fitEnd"
                        android:text=">"
                        android:textColor="#666666"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/applesdgothicneo_b"
                        android:text="휴면예금/보험금 찾기"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/applesdgothicneo_r"
                        android:scaleType="fitEnd"
                        android:text=">"
                        android:textColor="#666666"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/applesdgothicneo_b"
                        android:text="내 문서함"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/applesdgothicneo_r"
                        android:scaleType="fitEnd"
                        android:text=">"
                        android:textColor="#666666"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        android:layout_weight="1"/>
                </LinearLayout>


                <View
                    android:background="#1A666666"
                    android:layout_width="match_parent"
                    android:layout_height="3px"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="이체/출금"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:fontFamily="@font/applesdgothicneo_r"
                    android:layout_weight="1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="이체"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/applesdgothicneo_b"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/applesdgothicneo_r"
                        android:scaleType="fitEnd"
                        android:text=">"
                        android:textColor="#666666"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/applesdgothicneo_b"
                        android:text="다건이체"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/applesdgothicneo_r"
                        android:scaleType="fitEnd"
                        android:text=">"
                        android:textColor="#666666"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="자동이체"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/applesdgothicneo_b"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/applesdgothicneo_r"
                        android:scaleType="fitEnd"
                        android:text=">"
                        android:textColor="#666666"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="이체내역 조회"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/applesdgothicneo_b"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/applesdgothicneo_r"
                        android:scaleType="fitEnd"
                        android:text=">"
                        android:textColor="#666666"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="60dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ATM 스마트 출금"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:fontFamily="@font/applesdgothicneo_b"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/applesdgothicneo_r"
                        android:scaleType="fitEnd"
                        android:text=">"
                        android:textColor="#666666"
                        android:textSize="20sp"
                        android:textAlignment="textEnd"
                        android:layout_weight="1"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>